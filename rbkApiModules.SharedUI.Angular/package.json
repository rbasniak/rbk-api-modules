{
  "name": "rbk-shared-ui",
  "author": "Horizon Team",
  "version": "0.1.0-alpha",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4023 --configuration development",
    "build": "ng build",
    "build:prod": "ng build --configuration production --aot=true --build-optimizer=true --output-hashing=all",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "update-libs": "npm i ngx-smz-dialogs@latest ngx-rbk-utils@latest ngx-smz-ui@latest",
    "deploy": "node deploy --dev",
    "deploy:prod": "node deploy --prod",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-dev-dependencies --ignore-packages package1,package2 --columns name,type,current,wanted,latest,changes",
    "preversion": "npm run lint && npm run test && npm run check-outdated"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.2",
    "@angular/cdk": "^12.0.2",
    "@angular/common": "~12.0.2",
    "@angular/compiler": "~12.0.2",
    "@angular/core": "~12.0.2",
    "@angular/flex-layout": "^12.0.0-beta.34",
    "@angular/forms": "~12.0.2",
    "@angular/platform-browser": "~12.0.2",
    "@angular/platform-browser-dynamic": "~12.0.2",
    "@angular/router": "~12.0.2",
    "@auth0/angular-jwt": "^5.0.2",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@juggle/resize-observer": "^3.3.1",
    "@ngneat/until-destroy": "^8.0.4",
    "@ngxs/router-plugin": "^3.7.2",
    "@ngxs/store": "^3.7.2",
    "angular2-uuid": "^1.1.1",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.2.6",
    "chart.js": "^3.5.0",
    "hover.css": "^2.3.2",
    "lodash-es": "^4.17.21",
    "marked": "^2.1.3",
    "moment": "^2.29.1",
    "ngx-device-detector": "^2.1.1",
    "ngx-pipes": "^2.7.5",
    "ngx-smz-ui": "^3.0.14",
    "postcss": "^8.3.1",
    "primeflex": "^2.0.0",
    "primeicons": "^4.1.0",
    "primeng": "12.0.2",
    "rxjs": "~6.6.0",
    "tailwindcss": "^2.1.3",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.2",
    "@angular-eslint/eslint-plugin": "~12.1.0",
    "@angular/cli": "~12.0.2",
    "@angular/compiler-cli": "~12.0.2",
    "@ngxs/devtools-plugin": "^3.7.1",
    "@types/lodash-es": "^4.17.4",
    "@types/marked": "2.0.3",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "check-outdated": "^2.8.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "ftp-deploy": "^2.4.1",
    "promise-ftp-common": "1.1.5",
    "ts-node": "~10.0.0",
    "typescript": "~4.2.3"
  }
}
