@page "/todo"


<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <Check TValue="bool" @bind-Checked="todo.IsDone"><TextEdit placeholder="Something todo" @bind-Text="todo.Title" /></Check>

        </li>
    }
</ul>

<TextEdit placeholder="Something todo" @bind-Text="@newTodo" />
<Button Color="Color.Primary" Clicked="@OnButtonClicked">Add todo</Button>


@code {
    private IList<TodoItem> todos = new List<TodoItem>();
    private string newTodo;

    void OnButtonClicked()
    {
        Console.WriteLine("Hello world!");

        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}
