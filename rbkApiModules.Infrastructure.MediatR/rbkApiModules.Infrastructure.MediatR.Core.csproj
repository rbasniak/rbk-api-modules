    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.10.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\rbkApiModules.Diagnostics.Commons\rbkApiModules.Diagnostics.Commons.csproj" />
