@inherits LayoutComponentBase
@inject RbkSharedUIModuleOptions Options
<div class="sidenav">
    @if (Options.UseAnalyticsRoutes)
    {
        <a href="@Options.BaseHref/analytics/filter">Analytics Log</a>
        <a href="@Options.BaseHref/analytics/dashboard">Analytics Dashboard</a>
    }

    @if (Options.UseDiagnosticsRoutes)
    {
        <a href="@Options.BaseHref/diagnostics/filter">Diagnostics Log</a>
        <a href="@Options.BaseHref/diagnostics/dashboard">Diagnostics Dashboard</a>
    }

    @if (Options.UseAuditingRoutes)
    {
        <a href="@Options.BaseHref/auditing">Data Auditing</a>
    }

    @if (Options.CustomRoutes != null && Options.CustomRoutes.Count > 0)
    {
        @for (int i = 0; i < Options.CustomRoutes.Count; i++)
        {
            <a href="@Options.FormatUrl(Options.CustomRoutes[i].Url)">@Options.CustomRoutes[i].Name</a>
        }
    } 

</div>

<div class="content">
    @Body
</div>

